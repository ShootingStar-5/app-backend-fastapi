# 식약처 API 설정
FOOD_SAFETY_API_KEY=your_api_key_here
FOOD_SAFETY_BASE_URL=http://openapi.foodsafetykorea.go.kr/api

# Elasticsearch 설정
ES_HOST=localhost
ES_PORT=9200
ES_INDEX_NAME=health_supplements

# API 설정
API_BATCH_SIZE=1000
API_REQUEST_DELAY=0.5

# Google SERP API 설정
SERP_API_KEY=your_serpapi_key_here
SERP_API_ENABLED=false
SERP_MAX_RESULTS=5
SERP_TIMEOUT=5

# Google Gemini LLM 설정
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_OUTPUT_TOKENS=500

# 비중 설정
RAG_WEIGHT=0.5
GEMINI_WEIGHT=0.5

# 출력 설정
MAX_RESPONSE_LENGTH=200

# CORS 설정 (쉼표로 구분)
# 개발 환경: localhost 허용
# 프로덕션 환경: 실제 도메인으로 변경 필요
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5601,http://localhost:8000

# 환경 설정
ENV=development
DEBUG=True
