# Core Settings
PROJECT_NAME=Yakkobak
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost", "http://localhost:8080", "http://localhost:3000"]
SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=

# Elasticsearch
ES_HOST=localhost
ES_PORT=9200
ES_INDEX_NAME=health_supplements
ELASTICSEARCH_URL=http://localhost:9200

# External APIs
OPENAI_API_KEY=
FOOD_SAFETY_BASE_URL=http://openapi.foodsafetykorea.go.kr/api

# RAG Settings
EMBEDDING_MODEL=jhgan/ko-sroberta-multitask
EMBEDDING_DIM=768
DEFAULT_TOP_K=5
VECTOR_WEIGHT=0.8
KEYWORD_WEIGHT=0.2
RAG_WEIGHT=0.5
GEMINI_WEIGHT=0.5

# Gemini Settings
GEMINI_MODEL=gemini-2.0-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_OUTPUT_TOKENS=500

# Feature Flags
SERP_API_ENABLED=False
SERP_MAX_RESULTS=5
SERP_TIMEOUT=5

# Other
MAX_RESPONSE_LENGTH=200
# API 설정
API_BATCH_SIZE=1000
API_REQUEST_DELAY=0.5

# Azure Speech Service (STT)
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=westus3

# Azure OpenAI (LLM)
AZURE_OPENAI_KEY=
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o
# .env.example
# 실제 서비스에서 쓸 값이 아니라 "이런 값이 필요하다"를 보여주는 예시 파일입니다.

# 앱 실행 환경 (예: dev, prod)
APP_ENV=dev

# Azure OCR (Computer Vision) API 설정
# Azure Portal에서 Computer Vision 리소스 생성 후 키와 엔드포인트를 입력하세요
AZURE_OCR_KEY=YOUR_OCR_KEY_HERE
AZURE_OCR_ENDPOINT=YOUR_OCR_ENDPOINT_HERE

# Azure STT (Speech Service) API 설정
# Azure Portal에서 Speech Service 리소스 생성 후 키와 엔드포인트를 입력하세요
AZURE_TTS_KEY=YOUR_TTS_KEY_HERE
AZURE_TTS_ENDPOINT=YOUR_TTS_ENDPOINT_HERE
